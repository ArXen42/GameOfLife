<Window x:Class="CGoLUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CGoLUI"
        mc:Ignorable="d"
        Title="Conway's Game Of Life" Height="800" Width="800">
    <Border Padding="10">
        <StackPanel>

            <Grid>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Button Margin="5 10 5 10" Grid.Column="0" Content="Do" />
                <Button Margin="5 10 5 10" Grid.Column="1" Content="Your" />
                <Button Margin="5 10 5 10" Grid.Column="2" Content="Thing" />

            </Grid>
            
            <TextBlock Text="Conway's Game Of Life" FontWeight="Bold" Margin="5 10 5 5"/>
            <TextBlock Text="Well, kind of."  Margin="10 10 5 5"/>
            <TextBox Padding="2"/>

        </StackPanel>
    </Border>

</Window>